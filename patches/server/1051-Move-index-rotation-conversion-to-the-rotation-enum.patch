diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftItemFrame.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftItemFrame.java
index 2fcd9b836d42e3549a3b6b921c57a4c103146dff..a5d642913e21e2829da50573d3c7ba9398aaea42 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftItemFrame.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftItemFrame.java
@@ -85,24 +85,11 @@ public class CraftItemFrame extends CraftHanging implements ItemFrame {
 
     Rotation toBukkitRotation(int value) {
         // Translate NMS rotation integer to Bukkit API
-        switch (value) {
-        case 0:
-            return Rotation.NONE;
-        case 1:
-            return Rotation.CLOCKWISE_45;
-        case 2:
-            return Rotation.CLOCKWISE;
-        case 3:
-            return Rotation.CLOCKWISE_135;
-        case 4:
-            return Rotation.FLIPPED;
-        case 5:
-            return Rotation.FLIPPED_45;
-        case 6:
-            return Rotation.COUNTER_CLOCKWISE;
-        case 7:
-            return Rotation.COUNTER_CLOCKWISE_45;
-        default:
+        // Paper start - move to Rotation enum
+        if (0 <= value && value <= 7) {
+            return Rotation.fromIndex(value);
+        } else {
+        // Paper end - move to Rotation enum
             throw new AssertionError("Unknown rotation " + value + " for " + this.getHandle());
         }
     }
